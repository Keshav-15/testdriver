{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "1. Install TestDriverAI CLI",
      "type": "shell",
      "command": "npm",
      "args": ["install", "-g", "testdriverai"],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "2. Initialize your project",
      "type": "shell",
      "command": "testdriverai",
      "args": ["init"],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Uninstall TestDriverAI CLI",
      "type": "shell",
      "command": "npm",
      "args": [
        "uninstall",
        "-g",
        "testdriverai",
        "&&",
        "npm",
        "uninstall",
        "-g",
        "testdriverai"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}
